<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/particulars_title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"
        android:background="#e1e1e1"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/particulars_back_image"
             android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:text="商品详情" />

        <ImageView
            android:id="@+id/particulars_shoucang_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/apb" />

        <ImageView
            android:id="@+id/particulars_share_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/aqu" />
    </LinearLayout>

    <com.bwie.bawayshop.bawayshop.view.views.StickyNavLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/particulars_title"
        >

        <LinearLayout
            android:id="@+id/head_llayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--<com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/particulars_pic_image"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="5dp"
                fresco:actualImageScaleType="fitXY" />-->
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/particulars_pic_image"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:id="@+id/particulars_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="劳力士Rolex宇宙计型迪通拿自动机械皮带男表正品116519CR.TB"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/particulars_price_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="¥209500.00"
                    android:textColor="@android:color/holo_orange_light"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/particulars_salenum_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="销量：0件" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="送至" />

                <TextView
                    android:id="@+id/particulars_arrea_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="#ff00"
                    android:text="全国" />

                <TextView
                    android:id="@+id/particulars_goods_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="有货" />

                <TextView
                    android:id="@+id/particulars_money_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="免运费" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/particulars_comment_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="评价" />

                <TextView
                    android:id="@+id/particulars_goodcomment_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="#ff00"
                    android:text="好评率：100%" />

                <TextView
                    android:id="@+id/particulars_pernum_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="#ff00"
                    android:text="0人评价" />
            </LinearLayout>

            <TextView
                android:id="@+id/goods_jingle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="商品介绍"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/store_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="好商城V5"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/particulars_desc_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="描述：5.0分" />

                <TextView
                    android:id="@+id/particulars_descf_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":" />

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="#ff00" />

                <TextView
                    android:id="@+id/particulars_service_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="服务：5.0分" />
                <TextView
                    android:id="@+id/particulars_servicef_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text=":" />

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="#ff00" />

                <TextView
                    android:id="@+id/particulars_wuliu_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="物流：5.0分" />
                <TextView
                    android:id="@+id/particulars_wuliuf_tv"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text=":" />

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="#ff00" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/particulars_tuijian_tv"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:text="店铺推荐"
            android:textColor="@color/colorAccent"
            android:textSize="25sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/particulars_goods_list_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="100dp"
            >

        </android.support.v7.widget.RecyclerView>
    </com.bwie.bawayshop.bawayshop.view.views.StickyNavLayout>

    <LinearLayout
        android:id="@+id/llayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#e1e1e1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/particulars_kefu_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@mipmap/aor"
            android:gravity="center"
            android:text="客服" />

        <TextView
            android:id="@+id/particulars_gouwuche_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@mipmap/agt"
            android:gravity="center"
            android:text="购物车" />

        <TextView
            android:id="@+id/particulars_jointocar_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FF5001"
            android:gravity="center"
            android:text="加入购物车"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/particulars_buynow_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FF0000"
            android:gravity="center"
            android:text="立即购买"
            android:textSize="15sp" />
    </LinearLayout>


</RelativeLayout>