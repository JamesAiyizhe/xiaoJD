<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:background="#00000000"
    android:layout_height="50dp">

    <Button
        android:id="@+id/tv_scan"
        android:drawableTop="@mipmap/scan"
        android:text="扫啊扫"
        android:textSize="10sp"
        android:background="#00000000"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="16dp"
        android:layout_width="40dp"
        android:drawablePadding="2dp"
        android:layout_height="40dp" />

    <ImageButton
        android:id="@+id/ib_voice"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/voice"
        android:background="#00000000"
        android:layout_margin="5dp"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/et_search"
        android:layout_alignEnd="@+id/et_search" />

    <Button
        android:id="@+id/btn_message"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:background="#00000000"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:drawableTop="@mipmap/message"
        android:text="消息"
        android:textSize="10sp"
        android:layout_marginRight="16dp" />

    <EditText
        android:id="@+id/et_search"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:background="#00000000"
        android:drawableLeft="@mipmap/seek"
        android:drawablePadding="15dp"
        android:hint="雪中飞羽绒服"
        android:textSize="12sp"
        android:layout_alignTop="@+id/btn_message"
        android:layout_centerHorizontal="true" />


</RelativeLayout>

